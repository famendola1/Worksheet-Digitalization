<%= form_with(url: admin_courses_path, model: course, local: true) do |form| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= form.label :course_name %>
    <%= form.text_field :name, :required => true %>
  </div>

  <div class="actions">
    <%= form.label :section %>
    <%= form.number_field :section, min: 0, :required => true%>
  </div>

  <div class="actions">
    <%= form.label :semester %>
    <%= form.select :semester, ["Fall", "Spring"], :required => true %>
  </div>

  <div class="actions">
    <%= form.label :year %>
    <%= form.number_field :year, :required => true %>
  </div>

  <div class="actions">
    <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
      Create Course
    <% end %>
  </div>

<% end %>

