<%= form_with(url: admin_courses_path, model: course, local: true, class: "form-horizontal",) do |form| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-group row">
  <%= form.label :course_name, class: "control-label col-md-2" %>
  <div class="col-md-4">
    <%= form.text_field :name, :required => true, class: "form-control" %>
  </div>
</div>

<div class="form-group row">
  <%= form.label :section, class: "control-label col-md-2" %>
  <div class="col-md-4">
    <%= form.number_field :section, min: 0, :required => true, class: "form-control" %>
  </div>
</div>

<div class="form-group row">
  <%= form.label :semester, class: "control-label col-md-2" %>
  <div class="col-md-4">
    <%= form.select(:semester, ["Fall", "Spring"], {},{ :class => 'form-control' } ) %>
  </div>
</div>
<div class="form-group row">
  <%= form.label :year, class: "control-label col-md-1" %>
  <div class="col-md-4">
    <%= form.number_field :year, min: 0, :required => true, class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <div class="col-md-4">
    <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
      Create Course
    <% end %>
  </div>
</div>
<% end %>