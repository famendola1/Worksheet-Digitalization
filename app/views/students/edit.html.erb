<h1>Update Student</h1>

<%= form_for @student, url: {:action => "update"}, class: "form-horizontal", student_id: @student_id do |form| %>

  <div class="form-group row">
    <%= form.label :name, class: "control-label col-md-2" %>
    <div class="col-md-4">
    <%= form.text_field :name, class: "form-control", maxlength: "100" %>
	</div>
  </div>
<div class="form-group row">
  <div class="col-md-4">
    <%= form.submit "Update Student", class: "btn btn-primary" %>
  </div>
</div>
<% end %>